<div class="form-wrapper" style="background-image: linear-gradient(360deg, rgba(255 ,255 ,255, 0.2) 0%, rgba(0,0,0,0.2) 10%),
      url('<%= image_path 'recipe.jpg'%>');">
  <div class="row">
    <div class="form-container">
      <h3>Welcome back</h3>
      <p><em>Nice to see you again!</em></p>

      <div class="signup-login-form">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true, placeholder: "example@example.com" %>
            <%= f.input :password, required: false, placeholder: "••••••••" %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in" %>
          </div>
        <% end %>
      </div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>


