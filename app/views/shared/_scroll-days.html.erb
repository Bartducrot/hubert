<div class="scroller">
  <div class="scroll-flex">


    <% 15.times do |i| %>
      <% day = (@day - 7 + i) %>
      <% class_name = "scroll-btn " %>

      <% if day == @day %>
        <% class_name += "selected " %>
      <% end %>

      <%if day == Date.today %>
        <% class_name += "today " %>
      <% end %>



      <%= link_to calendar_path(day) do %>
        <div class="<%= class_name %>" >
          <h2> <%= "#{ day.strftime('%a %e %b')}" %></h2>
        </div>
      <% end %>
    <% end %>

  </div>




</div>
