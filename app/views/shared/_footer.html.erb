 <% if user_signed_in? %>
<div class="footer footer-<%= params[:controller] %>-<%= params[:action] %>">
  <div class="footer-flex">
      <%= link_to swiper_path do  %>
        <i class="material-icons footer-menu-item" aria-hidden="true">thumbs_up_down</i>
      <% end %>
      <%= link_to calendar_path(Date.today) do  %>
        <i class="material-icons footer-menu-item calendar" aria-hidden="true">date_range</i>
      <% end %>

      <%= link_to cookbook_path do  %>
        <i class="material-icons footer-menu-item" aria-hidden="true">book</i>
      <% end %>
      <%= link_to shopping_cart_path do  %>
        <i class="material-icons footer-menu-item" aria-hidden="true">shopping_cart</i>
      <% end %>
  </div>
</div>
 <% else %>
 <footer>
  <div class="footer" id="footer">
      <div class="container footer-menu">

        <div class="footer-second-row">
          <i class="fa fa-facebook-square" aria-hidden="true"></i>
          <i class="fa fa-twitter-square" aria-hidden="true"></i>
          <i class="fa fa-google-plus-square" aria-hidden="true"></i>
          <div id="c">
            <div id="s">
              <div class="l guide">
              </div>
            </div>
            <div class="l2 guide">
              </div>
          </div>
        </div>
        <div class="footer-third-row">
          <h2>HUBERT</h2>
        </div>
      </div>
  </div>
</footer>
<% end %>

<% content_for(:after_js) do %>
<script>
var pathname = window.location.pathname;

  $('.footer-flex a').each(function(){
    if ($(this).attr('href') === pathname) {
      $(this).addClass('active');
    }
  });
</script>
<% end %>
